<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fillViewport="true">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="25dp"
        android:background="@color/background"
        android:layout_height="match_parent"
        tools:context=".login">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calorie Level Output"
            android:layout_marginTop="2dp"
            android:textAlignment="center"
            android:textSize="30sp"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_marginTop="10sp"
            android:text="Please consult with a doctor for losing or gaining weight our result just for information"
            android:textSize="18dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_marginTop="10sp"
            android:text="MWL-Mild weight loss (0.25 kg/week) \nWL-Weight loss (0.5 kg/week) \nEWL-Extreme weight loss (1 kg/week)"
            android:textSize="18dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_marginTop="10sp"
            android:text="MWG-Mild weight gain (0.25 kg/week) \nWG-Weight gain (0.5 kg/week) \nFWG-Fast Weight gain (1 kg/week)"
            android:textSize="18dp" />


        <TextView
            android:id="@+id/tv4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:text=""
            android:textAlignment="center"
            android:textColor="@android:color/primary_text_light_nodisable"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/round"
            android:onClick="btn_back"
            android:text="Back"
            android:textColor="#fff"
            android:textSize="20sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/round"
            android:onClick="btn_menu"
            android:text="Main Menu"
            android:textColor="#fff"
            android:textSize="20sp" />

    </LinearLayout>
</ScrollView>