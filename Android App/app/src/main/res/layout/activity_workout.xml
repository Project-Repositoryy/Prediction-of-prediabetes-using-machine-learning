<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:fillViewport="true">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="25dp"
        android:background="@color/background"
        android:layout_height="match_parent"
        tools:context=".workout">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Workout Intensity"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:textColor="#0C0C0C"
            android:textSize="30sp"
            />
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="25sp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choose One"
                android:textAlignment="center"
                android:textColor="#464141"
                android:textSize="20sp"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Low Intensity (50% to 60%)"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:textColor="#928383"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Moderate Intensity (60% to 70%)"
                android:textSize="20sp"
                android:textColor="#928383"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Vigorous Intensity (75% to 85%)"
                android:textSize="20sp"
                android:textColor="#928383"/>

        </RadioGroup>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calculate"
            android:textSize="20sp"
            android:layout_marginTop="50dp"
            android:background="@drawable/round"
            android:textColor="#fff"
            android:onClick="btn_resultofworkout"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Main Menu"
            android:textSize="20sp"
            android:layout_marginTop="260dp"
            android:background="@drawable/round"
            android:textColor="#fff"
            android:onClick="btn_menu"/>

    </LinearLayout>
</ScrollView>


